<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <corners android:radius="18dp"/>

            <gradient
                android:type="linear"
                android:startColor="#0DD581"
                android:endColor="#84E225"
                android:angle="270" />

        </shape>
    </item>

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">

            <corners android:radius="18dp"/>

            <solid android:color="#F8FFFA"/>
        </shape>
    </item>
</layer-list>
