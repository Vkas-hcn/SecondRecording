<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <corners android:radius="18dp" />

            <gradient
                android:angle="270"
                android:endColor="#C6FFD4"
                android:startColor="#C6FFD4"
                android:type="linear" />

        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">

            <corners android:radius="18dp" />

            <solid android:color="#5EBE77" />
        </shape>
    </item>
</layer-list>
